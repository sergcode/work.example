mixin petersburg-tabs
  #petersburg.tab-pane.tariffs-political__tab-pane.fade(role="tabpanel" aria-labelledby="petersburg-tab")
    .tariffs-political__carousel-wrapper
      .fotorama.fotorama__tariffs-political(data-auto="false")
        img(src=staticImg + "tariffs-political/mersedes-benz-e-class-w213-one.jpg" data-caption="Mercedes E W213")
        img(src=staticImg + "tariffs-political/mersedes-benz-e-class-w213-two.jpg" data-caption="Mercedes E W213")
        img(src=staticImg + "tariffs-political/mersedes-benz-e-class-w213-three.jpg" data-caption="Mercedes E W213")
        img(src=staticImg + "tariffs-political/mersedes-benz-e-class-w213-four.jpg" data-caption="Mercedes E W213")
        img(src=staticImg + "tariffs-political/mersedes-benz-e-class-w213-five.jpg" data-caption="Mercedes E W213")

    .tariffs-political__information
      #accordionTariffsPoliticalPetersburg.tariffs-political__accordion

        .tariffs-political__card
          #petersburgHeadingOne.tariffs-political__card-header
            h2
              button(type="button" data-toggle="collapse" data-target="#petersburgCollapseOne" aria-expanded="true" aria-controls="petersburgCollapseOne")
                | Mercedes-Benz S class W222 Maybach
          #petersburgCollapseOne.collapse.show.tariffs-political__collapse(aria-labelledby="petersburgHeadingOne" data-parent="#accordionTariffsPoliticalPetersburg")
            p Доступно для заказа: 27 автомобилей
            p Год выпуска: 2019 г. | 2018 г. | 2017 г.
            ul
              li AMG пакет
              li ЖК панель
              li Панорамная крыша

        .tariffs-political__card
          #petersburgHeadingTwo.tariffs-political__card-header
            h2
              button.collapsed(type="button" data-toggle="collapse" data-target="#petersburgCollapseTwo" aria-expanded="false" aria-controls="petersburgCollapseTwo")
                | Mercedes-Benz S class W222
          #petersburgCollapseTwo.collapse.tariffs-political__collapse(aria-labelledby="petersburgHeadingTwo" data-parent="#accordionTariffsPoliticalPetersburg")
            p Доступно для заказа: 27 автомобилей
            p Год выпуска: 2019 г. | 2018 г. | 2017 г.
            ul
              li AMG пакет
              li ЖК панель
              li Панорамная крыша

        .tariffs-political__card
          #petersburgHeadingThree.tariffs-political__card-header
            h2
              button.collapsed(type="button" data-toggle="collapse" data-target="#petersburgCollapseThree" aria-expanded="false" aria-controls="petersburgCollapseThree")
                | Mercedes-Benz E class W213
          #petersburgCollapseThree.collapse.tariffs-political__collapse(aria-labelledby="petersburgHeadingThree" data-parent="#accordionTariffsPoliticalPetersburg")
            p Доступно для заказа: 27 автомобилей
            p Год выпуска: 2019 г. | 2018 г. | 2017 г.
            ul
              li AMG пакет
              li ЖК панель
              li Панорамная крыша

        .tariffs-political__card.tariffs-political__card_mb-40
          #petersburgHeadingFour.tariffs-political__card-header
